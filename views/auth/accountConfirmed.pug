extends ../layout/index

block contenido 
    input(type="hidden" name="_csrf" value=csrfToken)
    .py-10 
        h1.text-center.text-4xl.my-10.font-extrabold.text-custom-purple Bienes
            span.font-normal.text-black Raíces
        h2.text-center.font-extrabold.text-2xl= page

    div(class="bg-white shadow py-8 px-6 rounded-lg max-w-2xl mx-auto font-bold uppercase") 
        p(class= error ? 'bg-peach text-red-700 text-center' : 'bg-light-purple text-black text-center')= msg

           if(!error)
        a(href="/auth/login/" class="text-center font-bold text-sm text-slate-600 uppercase mt-10 block") Ya puedes iniciar sesión

